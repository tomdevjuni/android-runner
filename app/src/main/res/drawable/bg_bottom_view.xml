    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="2dp"
                android:color="#7000" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="-1dp"
                android:left="-1dp"
                android:right="-1dp"
                android:top="2dp" />

            <corners android:radius="3dp" />
        </shape>
