<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llLanguageMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabBg"
        android:orientation="horizontal"
        android:padding="@dimen/_20sdp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imLangLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_language_icon"
            android:tint="@color/txtGray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLanguageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"
            android:text="@string/english"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:src="@drawable/ic_done_svg"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/viewLineLanguage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@color/lineColor" />

</LinearLayout>